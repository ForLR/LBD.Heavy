@model  ManageClaimsModel
@{
    ViewBag.Title = "编辑用户的Claims";
}
<h2>@ViewBag.Title</h2>
<form asp-action="ManageClaims" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group row">
        <label asp-for="ClaimId" class="col-sm-2"></label>
        <div class="col-sm-3">
            <select class="form-control" style="width: 300px; display: inline;" asp-for="ClaimId" asp-items="@(new SelectList(Model.AvailableClaims))">
                <option value=""> -- 选择Claim -- </option>
            </select>
        </div>
    </div>
        <div class="form-group row">
            <label asp-for="ClaimValue" class="col-sm-2"></label>
            <div class="col-sm-3">
                <input class="form-control" asp-for="ClaimValue">
                <span class="invalid" asp-validation-for="ClaimValue"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">添加Claim</button>
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">返回用户页面</a>
</form>