@model IEnumerable<Heavy.Identity.Model.User>
@{
    ViewBag.Title = "用户列表";
}
<h2>@ViewBag.Title</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">用户名</th>
            <th scope="col">Email</th>
            <th scope="col">身份证</th>
            <th scope="col">Url</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
        <tr>
            <th scope="row">@u.Id</th>
            <td>@u.UserName</td>
            <td>@u.Email</td>
            <td>@u.IDCard</td>
            <td>@u.Url</td>
            <td>
                <form asp-action="Delete" asp-route-id="@u.Id" method="post">
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-primary">编辑</a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('确认删除？')">
                        删除
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="AddUser" class="btn btn-primary">添加用户</a>